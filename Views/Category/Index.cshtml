@model IEnumerable<NewspaperCMS.Models.category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-info ">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category ID
            </th>
            <th>
                Category Name

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.category_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.category_name" class="btn btn-secondary ">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.category_name" class="btn btn-secondary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.category_name"class="btn btn-secondary ">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

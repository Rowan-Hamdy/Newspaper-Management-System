@model IEnumerable<NewspaperCMS.Models.article>

@{
    ViewData["Title"] = "Index";
    
}

<h1>Index</h1>

<p>
    <a asp-action="Create"  class="btn btn-outline-info ">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Status
            </th>
            <th>
                Date
            </th>
            <th>
                Title
            </th>

            <th>
               Writer ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => 
                    item.article_date
                )
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id">@Html.DisplayFor(modelItem => item.title)</a> 
            </td>

            <td>
              
                @Html.DisplayFor(modelItem => item.writer_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id"  class="btn btn-secondary ">Edit</a> |

                <a asp-action="Delete" asp-route-id="@item.id"  class="btn btn-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
